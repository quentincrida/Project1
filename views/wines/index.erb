<div class = "light-background">

<table>

  <caption>Wine Inventory</caption>

    <thead>
      <tr>
      <th>Winery Name</th>
      <th>Wine Name</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Stock Level</th>
      <th>Cost</th>
      <th>Price</th>
      </tr>

    </thead>

  <tbody>

  <% for wine in @wines %>
  <tr>
    <td><%= wine.show_winery.name  %></a></td>
    <td><%= wine.name() %></td>
    <td><%= wine.description %></td>
    <td><%= wine.stock() %></td>
    <td><% if wine.stock().to_i == 0%>
    Out of Stock
        <% elsif wine.stock().to_i <= 5 %>
        Stock Low
       <% else %>
       Stock Healthy
        <% end %> </td>
    <td><%= wine.cost() %></td>
    <td><%= wine.price() %></td>
    
    </tr>
    <% end %>

  </tbody>
</table>
</div>
